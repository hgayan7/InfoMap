<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.him.infomap.LoginActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_upper_below"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        >


        <RelativeLayout
            android:id="@+id/card_relative_ub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00628B">


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_lower_below"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/card_upper_below"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/card_rellative_lb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dde1df">

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_above"
        android:layout_width="260dp"
        android:layout_height="340dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp"
        >

        <RelativeLayout
            android:id="@+id/card_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/card_above"
            android:layout_alignStart="@+id/card_above"
            android:layout_centerVertical="true"
            android:background="#E6E6DC">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif"
                android:text="Login"
                android:textColor="#00628B"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_below="@+id/login_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:padding="4dp"
                android:hint="\@username"
                android:inputType="textPersonName"
                android:textSize="22sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="8dp"
                android:background="#E6E6DC"
                android:src="@drawable/logo"
                app:civ_border_color="#E6E6DC"
                app:civ_border_width="0dp"
                android:layout_marginTop="10dp"
                />

            <Button

                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#E6E6DC"
                android:elevation="4dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:text="Login" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
